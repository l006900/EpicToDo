<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_blue_card"
    android:padding="15dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp">

    <TextView
        android:id="@+id/item_epic_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学习"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_epic_tag_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_epic_tag"
        app:layout_constraintStart_toEndOf="@+id/item_epic_tag" />

    <ImageView
        android:id="@+id/item_epic_time_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_epic_time"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_epic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- --"
        app:layout_constraintStart_toEndOf="@+id/item_epic_time_img"
        app:layout_constraintTop_toBottomOf="@+id/item_epic_tag" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_epic_select"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="选择"
        android:textColor="@color/white"
        android:backgroundTint="@color/selector_epic_tip_button"
        android:checkable="true"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_epic_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_epic_tag" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <TextView
        android:id="@+id/history_number_title_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录账号"
        android:textColor="@color/gray_dark"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_number_recycle_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        app:layout_constraintTop_toBottomOf="@+id/history_number_title_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history_number_cancel_account"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/history_number_cancel_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/black"
        android:backgroundTint="#D6D6DF"
        android:layout_marginHorizontal="24dp"
        app:cornerRadius="100dp"
        app:layout_constraintTop_toBottomOf="@+id/history_number_recycle_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
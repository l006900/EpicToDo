<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50dp">

    <ImageView
        android:id="@+id/dialog_login_wechat"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_wechat_icon"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toStartOf="@+id/dialog_login_qq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_login_qq"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_qq_icon"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintEnd_toStartOf="@+id/dialog_login_google"
        app:layout_constraintStart_toEndOf="@+id/dialog_login_wechat"
        app:layout_constraintTop_toTopOf="@+id/dialog_login_wechat" />

    <ImageView
        android:id="@+id/dialog_login_google"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/ic_google_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_login_qq"
        app:layout_constraintTop_toTopOf="@+id/dialog_login_wechat" />

</androidx.constraintlayout.widget.ConstraintLayout>

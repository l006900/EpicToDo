<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EpicToDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">#FF6200EE</item> <!-- 深紫色 -->
        <item name="colorPrimaryVariant">#FF3700B3</item> <!-- 较暗的深紫色 -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- 白色 -->

        <!-- 次要颜色 -->
        <item name="colorSecondary">#FF03DAC5</item> <!-- 青绿色 -->
        <item name="colorSecondaryVariant">#FF018786</item> <!-- 较暗的青绿色 -->
        <item name="colorOnSecondary">#000000</item> <!-- 黑色 -->

        <!-- 状态栏和窗口背景 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">#FFFFFFFF</item> <!-- 白色背景 -->

        <!-- 文本颜色 -->
        <item name="android:textColor">#000000</item> <!-- 黑色 -->
        <item name="android:textColorPrimary">#000000</item> <!-- 黑色 -->

        <!-- 字体和文本大小 -->
        <item name="android:fontFamily">@font/b</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.EpicToDo.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">#FFBB86FC</item> <!-- 浅紫色 -->
        <item name="colorPrimaryVariant">#FF3700B3</item> <!-- 较暗的深紫色 -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- 白色 -->

        <!-- 次要颜色 -->
        <item name="colorSecondary">#FF03DAC5</item> <!-- 青绿色 -->
        <item name="colorSecondaryVariant">#FF018786</item> <!-- 较暗的青绿色 -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- 白色 -->

        <!-- 状态栏和窗口背景 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">#FF121212</item> <!-- 深灰色背景 -->

        <!-- 文本颜色 -->
        <item name="android:textColor">#FFFFFF</item> <!-- 白色 -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- 白色 -->

        <!-- 字体和文本大小 -->
        <item name="android:fontFamily">@font/b</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--弹窗-->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="bottom_tab_title_active">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottom_tab_title_inactive">
        <item name="android:textSize">14sp</item>
    </style>




</resources>


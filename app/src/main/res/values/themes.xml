<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EpicToDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/new_deep_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/new_yellow</item>
        <item name="colorSecondaryVariant">@color/new_deep_yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- 状态栏和窗口背景 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/gray_light</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- 文本颜色 -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>

        <!-- 字体和文本大小 -->
        <item name="android:fontFamily">@font/b</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.EpicToDo.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/new_deep_blue</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/new_deep_yellow</item>
        <item name="colorSecondaryVariant">@color/new_yellow</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 状态栏和窗口背景 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/gray_dark</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- 文本颜色 -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- 字体和文本大小 -->
        <item name="android:fontFamily">@font/b</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 弹窗 -->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bottom_tab_title_active">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="bottom_tab_title_inactive">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_medium</item>
    </style>

    <!--动画弹窗-->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnchanged|adjustPan</item>
    </style>

    <!--弹窗-->
    <style name="BottomSheetStyle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

</resources>
